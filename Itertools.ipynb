import itertools

# Создаем два списка
list1 = [1, 2, 3]
list2 = [4, 5, 6]

# Объединяем их в один итератор
merged_list = itertools.chain(list1, list2)

# Выводим элементы объединенного списка
for item in merged_list:
    print(item)

